@model EmployeeManagement.ViewModels.EditEmployeeViewModel
@{
    ViewBag.Title = "Edit Page";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "userlogo.png");
}
<div><form enctype="multipart/form-data" asp-controller="home" asp-action="EditEmployee" method="post" class="mt-3">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="ExistingPhotoPath"/>
    <div class="form-group row mb-2">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control " placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-2">
        <label asp-for="Department" class="col-sm-2 col-form-label "></label>
        <div class="col-sm-10">
            <select class="form-select form-select-sm" aria-label=".form-select-sm example"
                    asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Department>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input">

            </div>
        </div>
    </div>
     <div class="form-group row col-sm-4 offset-4">
    <img src="@photoPath" class="img-thumbnail" asp-append-version="true"/>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row mb-3">
        <div class="col-sm-10 ">
            <button type="submit" class="btn">Update</button>
            <a asp-controller="home" asp-action="listEmployee" class="btn">Cancel</a>
        </div>
    </div>
</form></div>

