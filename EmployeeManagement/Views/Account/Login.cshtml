@model EmployeeManagement.ViewModels.LoginViewModel

@{ 
    ViewBag.Title = "Login";
    var error = TempData["Error"] as string;
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h3 class="alert-danger" style="padding: 20px;">@error</h3>
}
<form asp-route-returnurl = "@returnUrl" asp-controller="account" asp-action="login" method="post" class="mt-3">
    <div class="form-group row mb-2">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control " placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-2">    
        <div class="form-check col-sm-10">
            <label asp-for="RememberMe" class="col-sm-2 col-form-label">
                <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row mb-3">
        <div class="col-sm-10 ">
            <button type="submit" class="btn">Login</button>
        </div>
    </div>
</form>