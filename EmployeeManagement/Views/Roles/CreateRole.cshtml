@model EmployeeManagement.ViewModels.CreateRoleViewModel
@{
    ViewBag.Title = "Create Role";
}
<h1>Create New Role</h1>
<form asp-controller="roles" asp-action="CreateRole" method="post" class="mt-3">
    <div class="form-group row mb-2">
        <label asp-for="Role" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Role" class="form-control " placeholder="Role Name">
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-10 ">
            <button type="submit" class="btn" style="width:auto">Create Role</button>
        </div>
    </div>
</form>
